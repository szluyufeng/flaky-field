---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: '多国语言企业官网建站服务 - 助力中国制造企业开拓全球市场',
  description: '专为中小型制造企业打造的多国语言企业官网，10种以上语言覆盖，完善的SEO优化，符合Google最佳实践，全球CDN加速，助力您快速获取海外客户。',
};
---

<Layout metadata={metadata}>
  <!-- Hero 首屏 - 震撼开场 ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: '预约建站咨询',
        href: '/contact',
        icon: 'tabler:calendar-event',
      },
      { 
        text: '查看真实案例', 
        href: '#cases', 
        variant: 'secondary',
        class: 'border-blue-200 dark:border-blue-800 text-blue-700 dark:text-blue-300 hover:bg-blue-50 dark:hover:bg-blue-900/20'
      },
    ]}
  >
    <Fragment slot="title">
      <span class="text-gray-900 dark:text-white tracking-tight">不仅仅是建站</span><br />
      <span class="text-4xl md:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-700 via-blue-600 to-blue-400">打造24H获客的多语言企业官网</span>
    </Fragment>

    <Fragment slot="subtitle">
      <div class="text-lg md:text-xl text-slate-600 dark:text-slate-400 leading-relaxed max-w-3xl mx-auto mb-8">
        别让您的工厂在海外互联网上"隐形"。我们为您构建<span class="font-semibold text-blue-700 dark:text-blue-400">符合Google收录标准</span>的多语言官网，让全球采购商搜得到、看得懂、留得下。
        
        <div class="flex flex-wrap justify-center gap-4 mt-6 mb-4 text-sm font-medium text-slate-500">
           <span class="flex items-center gap-1"><span class="w-2 h-2 rounded-full bg-green-500"></span> 10+ 语种覆盖</span>
           <span class="flex items-center gap-1"><span class="w-2 h-2 rounded-full bg-blue-500"></span> Google SEO 架构</span>
           <span class="flex items-center gap-1"><span class="w-2 h-2 rounded-full bg-purple-500"></span> 询盘转化导向</span>
        </div>
      </div>
    </Fragment>
    
    <Fragment slot="image">
      <div class="relative w-full max-w-5xl mx-auto group">
        <!-- Decoration Gradients -->
        <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-xl blur opacity-20 group-hover:opacity-30 transition duration-1000"></div>
        
        <!-- Main Interface Container -->
        <div class="relative rounded-xl shadow-2xl overflow-hidden bg-slate-900 border border-slate-800">
           <!-- Browser Chrome -->
           <div class="h-8 bg-slate-800 flex items-center px-4 gap-2 border-b border-slate-700">
             <div class="w-3 h-3 rounded-full bg-red-500"></div>
             <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
             <div class="w-3 h-3 rounded-full bg-green-500"></div>
             <div class="ml-4 flex-1 h-5 bg-slate-900/50 rounded-md text-[10px] text-slate-500 flex items-center px-2 font-mono">
               your-company.com
             </div>
           </div>
           
           <!-- Content Preview Area (Abstract Representation) -->
           <div class="p-8 md:p-12 grid md:grid-cols-2 gap-12 items-center bg-gradient-to-br from-slate-900 to-slate-800">
             <div class="space-y-6">
               <div class="space-y-3">
                 <div class="h-8 w-32 bg-blue-600/20 rounded-lg border border-blue-500/30 flex items-center px-3 text-blue-400 text-xs font-mono animate-pulse">Global Traffic</div>
                 <h3 class="text-3xl font-bold text-white leading-tight">让世界看见<br/><span class="text-blue-500">中国制造</span>的力量</h3>
                 <p class="text-slate-400 text-sm">打破B2B平台内卷，建立独立品牌私域。</p>
               </div>
               
               <!-- Data Floating Cards -->
               <div class="grid grid-cols-2 gap-3">
                 <div class="bg-white/5 backdrop-blur p-3 rounded-lg border border-white/10">
                    <div class="text-2xl font-bold text-white">300%</div>
                    <div class="text-[10px] text-slate-400 uppercase tracking-wider">询盘增长</div>
                 </div>
                 <div class="bg-white/5 backdrop-blur p-3 rounded-lg border border-white/10">
                    <div class="text-2xl font-bold text-white">Top 3</div>
                    <div class="text-[10px] text-slate-400 uppercase tracking-wider">Google排名</div>
                 </div>
               </div>
             </div>
             
             <!-- Abstract Globe/Network Visual -->
             <div class="relative h-64 w-full flex items-center justify-center">
                <div class="absolute inset-0 bg-blue-500/10 rounded-full blur-3xl"></div>
                <div class="relative z-10 grid grid-cols-2 gap-4">
                   <div class="p-4 bg-slate-800 rounded-lg border border-slate-700 shadow-lg transform rotate-[-6deg] hover:rotate-0 transition-transform duration-500 mt-8">
                      <div class="flex items-center gap-2 mb-2">
                        <span class="text-xl">🇩🇪</span> <span class="text-white text-sm font-bold">Germany</span>
                      </div>
                      <div class="h-2 w-24 bg-slate-700 rounded full mb-1"></div>
                      <div class="h-2 w-16 bg-slate-700 rounded full"></div>
                   </div>
                   <div class="p-4 bg-slate-800 rounded-lg border border-slate-700 shadow-lg transform rotate-[6deg] hover:rotate-0 transition-transform duration-500">
                      <div class="flex items-center gap-2 mb-2">
                        <span class="text-xl">🇺🇸</span> <span class="text-white text-sm font-bold">USA</span>
                      </div>
                      <div class="h-2 w-24 bg-slate-700 rounded full mb-1"></div>
                      <div class="h-2 w-16 bg-slate-700 rounded full"></div>
                   </div>
                </div>
             </div>
           </div>
        </div>
      </div>
    </Fragment>
  </Hero>

  <!-- Stats 数据展示 - 建立信任 ****************** -->
  <Stats
    title="Real Results"
    subtitle="不讲空话，只看真实交付的数据成果"
    stats={[
      { title: 'Manufacturing Clients', amount: '200+', icon: 'tabler:building-factory' },
      { title: 'Global Languages', amount: '10+', icon: 'tabler:world' },
      { title: 'Avg. Launch Time', amount: '30 Days', icon: 'tabler:clock' },
      { title: 'Inquiry Growth', amount: '60%+', icon: 'tabler:trending-up' },
    ]}
  >
     <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-50 dark:bg-slate-900/50 border-y border-slate-200 dark:border-slate-800"></div>
    </Fragment>
  </Stats>

  <!-- Content 痛点唤醒 - 为什么需要企业官网 **************** -->
  <Content
    isReversed
    items={[
      {
        title: '隐形冠军的困境',
        description: '您的工厂技术一流，但在Google上却"查无此人"。海外采购商习惯通过搜索引擎寻找供应商，没有官网意味着直接放弃了93%的主动搜索流量。',
        icon: 'tabler:ghost',
      },
      {
        title: '平台内卷的红海',
        description: 'B2B平台上数千家同行同台竞技，被迫卷入价格战，利润空间被无限压缩。您需要一个没有竞争对手的私域主场。',
        icon: 'tabler:trending-down',
      },
      {
        title: '信任建立的基石',
        description: '官网是企业的数字门面。对于无法实地考察的海外客户，一个专业、多语言的官网是建立初步信任、展示企业实力的唯一窗口。',
        icon: 'tabler:shield-check',
      },
    ]}
  >
    <Fragment slot="content">
      <div class="mb-4">
        <span class="text-xs font-bold tracking-widest text-red-600 uppercase bg-red-100 dark:bg-red-900/30 px-2 py-1 rounded">Pain Points</span>
      </div>
      <h3 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl mb-4">
        如果没有独立官网<br/>您的企业正在<span class="text-red-600">错失良机</span>
      </h3>
      <p class="text-lg text-slate-600 dark:text-slate-400 mb-6">
        在这个数字化采购的时代，**"酒香也怕巷子深"**。仅仅依靠展会和B2B平台，已经无法满足现代采购商的搜索习惯。
      </p>
      <div class="p-4 bg-red-50 dark:bg-red-900/10 border-l-4 border-red-500 rounded-r-lg">
        <p class="text-base text-red-800 dark:text-red-200 italic">
          "据 B2B International 统计，93% 的企业采购决策始于在线搜索。如果在第一步就缺席，您将永远无法进入采购商的候选名单。"
        </p>
      </div>
    </Fragment>

    <Fragment slot="image">
       <div class="relative group">
          <div class="absolute -inset-2 bg-gradient-to-r from-red-500 to-orange-500 rounded-xl blur opacity-20 group-hover:opacity-30 transition duration-500"></div>
          <div class="relative bg-white dark:bg-slate-800 rounded-xl shadow-xl overflow-hidden border border-slate-100 dark:border-slate-700 p-8 flex flex-col items-center text-center">
             <div class="w-20 h-20 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mb-6">
                <span class="text-4xl">📉</span>
             </div>
             <h4 class="text-xl font-bold text-slate-900 dark:text-white mb-2">流量漏斗的缺失</h4>
             <p class="text-slate-500 text-sm mb-6">所有商机都在Google搜索框中产生，而您的竞争对手正在那里等待客户。</p>
             
             <div class="w-full bg-slate-100 dark:bg-slate-700 h-2 rounded-full overflow-hidden">
                <div class="h-full bg-red-500 w-[7%]" title="仅依靠传统渠道覆盖率"></div>
             </div>
             <div class="flex justify-between w-full text-xs text-slate-400 mt-2">
                <span>传统渠道覆盖 7%</span>
                <span>错失商机 93%</span>
             </div>
          </div>
       </div>
    </Fragment>
  </Content>

  <!-- Content 解决方案 - 企业官网的价值 **************** -->
  <Content
    items={[
      {
        title: '24小时全球业务员',
        description: 'Google不睡觉，您的官网也不打烊。无论您在睡觉还是度假，多语言官网都在全球各地为您接待客户、展示产品。',
        icon: 'tabler:clock-24',
      },
      {
        title: '品牌溢价的加速器',
        description: '摆脱"中国制造=廉价"的刻板印象。通过工业级的美学设计和专业的内容呈现，让客户认可您的品牌价值，接受更高的报价。',
        icon: 'tabler:premium-rights',
      },
      {
        title: '私域流量的蓄水池',
        description: '将展会、社媒、邮件开发的所有流量汇聚到官网。在这里，客户只属于您一个人，没有比价干扰，只有深度沟通。',
        icon: 'tabler:database-import',
      },
    ]}
  >
    <Fragment slot="content">
      <div class="mb-4">
        <span class="text-xs font-bold tracking-widest text-green-600 uppercase bg-green-100 dark:bg-green-900/30 px-2 py-1 rounded">Value Proposition</span>
      </div>
      <h3 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl mb-4">
        不仅是展示，更是<span class="text-green-600">获客引擎</span>
      </h3>
      <p class="text-lg text-slate-600 dark:text-slate-400 mb-6">
        我们构建的不是静态的电子画册，而是一个具备**SEO自生长能力**的营销系统。它像一棵树，随着时间推移，根系（关键词排名）越扎越深，果实（自然询盘）越来越多。
      </p>
      
      <div class="grid grid-cols-2 gap-4 mt-8">
          <div class="bg-white dark:bg-slate-800 p-4 rounded-lg shadow-sm border border-slate-100 dark:border-slate-700">
             <div class="text-3xl font-bold text-green-600 mb-1">ROI</div>
             <div class="text-sm text-slate-500">3-6个月平均回本周期</div>
          </div>
          <div class="bg-white dark:bg-slate-800 p-4 rounded-lg shadow-sm border border-slate-100 dark:border-slate-700">
             <div class="text-3xl font-bold text-green-600 mb-1">∞</div>
             <div class="text-sm text-slate-500">永久资产，无需年费</div>
          </div>
      </div>
    </Fragment>

    <Fragment slot="image">
      <div class="relative group">
         <div class="absolute -inset-2 bg-gradient-to-r from-green-400 to-emerald-600 rounded-xl blur opacity-20 group-hover:opacity-30 transition duration-500"></div>
         <div class="relative bg-white dark:bg-slate-800 rounded-xl shadow-2xl overflow-hidden border border-slate-100 dark:border-slate-700">
            <!-- Header -->
            <div class="h-12 bg-slate-50 dark:bg-slate-900 border-b border-slate-100 dark:border-slate-800 flex items-center justify-between px-4">
               <div class="flex gap-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-slate-300"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-slate-300"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-slate-300"></div>
               </div>
               <div class="text-xs font-mono text-slate-400">analytics.google.com</div>
               <div></div>
            </div>
            <!-- Chart Area -->
            <div class="p-6">
               <div class="flex items-end gap-2 h-40 mb-2">
                  <div class="w-1/6 bg-green-100 dark:bg-green-900/20 h-[20%] rounded-t mx-auto relative group/bar">
                     <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-800 text-white text-xs py-1 px-2 rounded opacity-0 group-hover/bar:opacity-100 transition">Month 1</div>
                  </div>
                  <div class="w-1/6 bg-green-200 dark:bg-green-900/30 h-[35%] rounded-t mx-auto relative group/bar">
                     <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-800 text-white text-xs py-1 px-2 rounded opacity-0 group-hover/bar:opacity-100 transition">Month 2</div>
                  </div>
                  <div class="w-1/6 bg-green-300 dark:bg-green-900/40 h-[45%] rounded-t mx-auto relative group/bar">
                     <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-800 text-white text-xs py-1 px-2 rounded opacity-0 group-hover/bar:opacity-100 transition">Month 3</div>
                  </div>
                  <div class="w-1/6 bg-green-400 dark:bg-green-900/50 h-[60%] rounded-t mx-auto relative group/bar">
                     <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-800 text-white text-xs py-1 px-2 rounded opacity-0 group-hover/bar:opacity-100 transition">Month 4</div>
                  </div>
                  <div class="w-1/6 bg-green-500 dark:bg-green-600 h-[80%] rounded-t mx-auto relative group/bar">
                     <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-800 text-white text-xs py-1 px-2 rounded opacity-0 group-hover/bar:opacity-100 transition">Month 5</div>
                  </div>
                  <div class="w-1/6 bg-green-600 dark:bg-green-500 h-[95%] rounded-t mx-auto relative group/bar">
                     <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-800 text-white text-xs py-1 px-2 rounded opacity-0 group-hover/bar:opacity-100 transition">Month 6</div>
                  </div>
               </div>
               <div class="border-t border-slate-200 dark:border-slate-700 pt-2 flex justify-between text-xs text-slate-400">
                  <span>Start</span>
                  <span>Growth</span>
               </div>
               <div class="mt-4 flex items-center justify-center gap-2 text-green-600 font-bold bg-green-50 dark:bg-green-900/10 py-2 rounded-lg">
                  <span>📈 自然流量持续增长</span>
               </div>
            </div>
         </div>
      </div>
    </Fragment>
  </Content>

  <!-- Features 我们的核心竞争力 *************** -->
  <Features
    id="advantages"
    tagline="Why Choose Us"
    title="我们不只是建站公司<br/>我们是<span class='text-blue-600'>出海增长伙伴</span>"
    subtitle="市面上90%的建站公司只懂代码不懂外贸，或者只懂设计不懂SEO。<br/>我们懂代码、懂设计，更懂如何帮中国工厂拿订单。"
    items={[
      {
        title: 'Native-Level 多语种内容',
        description: '告别"机翻"带来的尴尬。我们拥有母语级翻译团队，确保您的产品描述地道、专业，符合目标国客户的阅读习惯。',
        icon: 'tabler:language',
      },
      {
        title: 'Google SEO 基因植入',
        description: '从代码结构到URL规范，从TDK设置到内链布局，每一个细节都严格遵循Google SEO白皮书，让网站天生具备高排名潜力。',
        icon: 'tabler:search',
      },
      {
        title: 'B2B 转化逻辑设计',
        description: '我们深知B2B采购决策链条。通过信任背书、实力展示、询盘引导等心理学设计，让访客转化为实实在在的询盘。',
        icon: 'tabler:user-plus',
      },
      {
        title: '工业级审美标准',
        description: '拒绝花哨和廉价感。我们参考德系、日系制造业官网风格，打造严谨、专业、高端的品牌形象，赢得大客户信赖。',
        icon: 'tabler:palette',
      },
      {
        title: '全球 CDN 极速分发',
        description: '天下武功，唯快不破。部署全球200+节点CDN，无论客户在纽约、伦敦还是迪拜，打开您的网站都像访问本地文件一样快。',
        icon: 'tabler:rocket',
      },
      {
        title: '全终端自适应响应',
        description: '在这个移动办公时代，您的官网在手机、平板、甚至展会大屏上都能完美展示，随时随地捕捉商机。',
        icon: 'tabler:devices',
      },
    ]}
  />

  <!-- Features2 核心功能详解 ************** -->
  <Features2
    title="专为制造企业定制的<br/><span class='text-blue-600'>获客工具箱</span>"
    subtitle="不仅仅是页面展示，更是一套完整的营销闭环系统"
    tagline="Core Features"
    columns={2}
    items={[
      {
        title: '🏭 沉浸式云工厂',
        description: '通过VR全景或高清图集，将您的生产线、实验室、样品间搬到线上。让客户隔着屏幕也能感受到您的制造实力。',
        icon: 'tabler:building-factory-2',
      },
      {
        title: '📦 智能产品目录',
        description: '支持多级分类、参数筛选、PDF手册下载。像亚马逊一样专业的展示体验，方便采购商快速找到所需产品。',
        icon: 'tabler:layout-grid',
      },
      {
        title: '📰 内容营销中心',
        description: '集成Blog和News模块。定期发布行业干货、案例分析，不仅体现专业度，更是源源不断获取SEO长尾流量的利器。',
        icon: 'tabler:news',
      },
      {
        title: '💌 智能询盘管家',
        description: '表单防垃圾过滤、自动邮件回复、CRM系统对接。不错过任何一个真实商机，同时屏蔽无效骚扰。',
        icon: 'tabler:mail-forward',
      },
      {
        title: '🔗 TikTok 流量着陆页',
        description: '无缝对接TikTok企业号。短视频引流 -> 官网沉淀 -> 询盘转化，打造"公域+私域"的流量闭环。',
        icon: 'tabler:brand-tiktok',
      },
      {
        title: '📊 数据分析看板',
        description: '集成Google Analytics 4。谁访问了网站？来自哪个国家？看了哪些产品？数据一目了然，决策有据可依。',
        icon: 'tabler:chart-dots',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50/50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Steps 服务流程 ****************** -->
  <Steps
    title="30天交付承诺"
    subtitle="我们将复杂的建站工程，拆解为标准化的SOP流程。<br/>您只需配合提供素材，剩下的交给我们。"
    items={[
      {
        title: 'Kick-off: 深度调研与策划 <span class="text-sm font-normal text-slate-500 ml-2">Day 1-3</span>',
        description: '我们不急着动手，先动脑。深度调研您的产品特性、目标市场竞对分析，输出专属的《建站策划方案》和《内容架构图》。',
        icon: 'tabler:bulb',
      },
