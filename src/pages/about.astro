---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: '关于我们 — 巨星出海',
  description: '巨星出海是国内领先的跨境培训、跨境咨询和品牌孵化专业机构，总部位于深圳沙井。TikTok官方认证全资质机构。',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero tagline="关于我们">
    <Fragment slot="title">
      <span class="text-accent dark:text-blue-400">巨星出海</span><br />
      助力中国品牌扬帆出海
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-lg">
        巨星出海是国内领先的跨境培训、跨境咨询和品牌孵化的专业机构，<br />
        总部位于深圳沙井。我们拥有数十位专业跨境实战运营导师，<br />
        具备从零到一运营TikTok的项目经验。
      </span>
    </Fragment>

    <Fragment slot="image">
      <div class="relative w-full h-[400px] bg-gradient-to-br from-blue-600 to-indigo-700 rounded-lg shadow-2xl flex items-center justify-center">
        <div class="text-white text-center px-8">
          <div class="text-6xl mb-4">🌟</div>
          <div class="text-3xl font-bold mb-2">国内领先</div>
          <div class="text-xl">跨境培训与品牌孵化机构</div>
        </div>
      </div>
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->
  <Stats
    title="用数据见证实力"
    stats={[
      { title: '服务客户', amount: '1000+', icon: 'tabler:users' },
      { title: '跨境经验', amount: '15年+', icon: 'tabler:calendar' },
      { title: '专业导师', amount: '数十位', icon: 'tabler:user-star' },
      { title: '千万粉丝账号', amount: '多个', icon: 'tabler:star-filled' },
    ]}
  />

  <!-- Content 公司介绍 **************** -->
  <Content
    tagline="公司简介"
    title="深耕跨境领域，专注品牌出海"
    items={[
      {
        title: 'TikTok官方全资质认证',
        description: '拥有TSP、TAP、MCN、ADS全资质认证，官方授权合作机构。',
      },
      {
        title: '荣获多项官方荣誉',
        description: 'TikTok官方2022年度十大上榜机构品牌，多次获得跨境电商领域奖项。',
      },
      {
        title: '服务成果显著',
        description: '累计服务超过1000家客户，成功打造多个千万粉丝账号矩阵。',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-4">
        我们的使命
      </h3>
      <p class="text-lg leading-relaxed mb-4">
        助力中国品牌出海，创造更多社会就业机会，与合作伙伴共同成长，构建全球互通的服务生态。
      </p>
      <p class="text-lg leading-relaxed">
        我们深知每一个出海品牌背后都承载着创业者的梦想，因此我们用专业和热情，为每一位客户提供最优质的服务，让中国品牌在全球舞台上绽放光彩。
      </p>
    </Fragment>

    <Fragment slot="image">
      <div class="relative w-full h-[400px] bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg shadow-xl flex items-center justify-center">
        <div class="text-white text-center">
          <div class="text-5xl mb-4">🎯</div>
          <div class="text-2xl font-bold">我们的使命</div>
          <div class="text-xl mt-2">助力品牌出海</div>
        </div>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps2 发展历程 ****************** -->
  <Steps2
    id="history"
    title="发展历程"
    subtitle="十余年深耕跨境领域，每一步都是突破与创新"
    items={[
      {
        title: '2011年：起航',
        description: '成立深圳市玩咖科技有限公司，开启跨境电商探索之旅，为日后的专业化发展奠定基础。',
        icon: 'tabler:flag',
      },
      {
        title: '2015年：拓展',
        description: '成立跨境电商事业部，开拓全球市场，积累丰富的国际化运营经验，服务范围覆盖多个国家和地区。',
        icon: 'tabler:world',
      },
      {
        title: '2021年：聚焦',
        description: '成立巨星出海，专注企业培训和咨询，将多年积累的经验系统化、产品化，助力更多企业成功出海。',
        icon: 'tabler:rocket',
      },
      {
        title: '2023年：升级',
        description: '聚星集团官网正式上线，开启集团业务发展新篇章，服务体系全面升级，为客户提供更完善的一站式出海解决方案。',
        icon: 'tabler:star',
      },
    ]}
  />

  <!-- Features3 核心资质 ************** -->
  <Features3
    id="honors"
    title="荣誉与资质"
    subtitle="官方认证，实力见证，多项荣誉彰显行业领先地位"
    columns={3}
    items={[
      {
        title: 'TikTok 2022年度十大机构',
        description: '荣获TikTok官方颁发的2022年度十大上榜机构品牌荣誉，是对我们专业实力的最高认可。',
        icon: 'tabler:trophy',
      },
      {
        title: 'TikTok官方认证MCN',
        description: 'TikTok美区、英区、东南亚官方认证MCN、TAP，拥有全资质认证，官方授权合作。',
        icon: 'tabler:certificate',
      },
      {
        title: 'YouTube Shorts官方服务商',
        description: 'YouTube Shorts官方服务商，为客户提供YouTube短视频营销专业服务。',
        icon: 'tabler:video',
      },
      {
        title: 'Google一级代理商',
        description: 'Google官方认证一级代理商，为企业提供全方位的Google广告投放服务。',
        icon: 'tabler:brand-google',
      },
      {
        title: '亚马逊跨境品牌百强',
        description: '亚马逊全球中国出口跨境品牌百强，展现我们在跨境电商领域的卓越成就。',
        icon: 'tabler:award',
      },
      {
        title: 'TikTok MCN优秀机构',
        description: 'TikTok东南亚/英国MCN优秀机构，在多个区域市场表现突出。',
        icon: 'tabler:star',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features3>

  <!-- Content 导师团队 **************** -->
  <Content
    id="team"
    isReversed
    tagline="导师团队"
    title="实战派专家团队"
    items={[
      {
        title: '15年+跨境电商经验',
        description: '导师团队平均拥有15年以上的跨境电商实战经验，精通多平台运营。',
      },
      {
        title: 'TikTok全域营销专家',
        description: '精通TikTok全域营销推广，掌握最新平台算法和玩法，短视频营销内容策划专家。',
      },
      {
        title: '服务500+企业',
        description: '已为超过500家企业提供帮助，助力快速获得短视频营销成果，实现商业转化。',
      },
      {
        title: '从零到一的项目经验',
        description: '具备从零到一运营TikTok的完整项目经验，能够提供最实战、最落地的指导。',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-4">
        数十位专业导师，手把手教学
      </h3>
      <p class="text-lg leading-relaxed mb-4">
        我们的导师不仅拥有丰富的理论知识，更重要的是拥有真实的项目经验和成功案例。他们将自己多年积累的宝贵经验倾囊相授，帮助学员少走弯路，快速成长。
      </p>
      <p class="text-lg leading-relaxed">
        每一位导师都经过严格筛选，不仅要有出色的专业能力，更要有强烈的责任心和良好的教学能力，确保每一位学员都能获得最优质的学习体验。
      </p>
    </Fragment>

    <Fragment slot="image">
      <div class="relative w-full h-[400px] bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg shadow-xl flex items-center justify-center">
        <div class="text-white text-center">
          <div class="text-5xl mb-4">👥</div>
          <div class="text-2xl font-bold">专业导师团队</div>
          <div class="text-xl mt-2">15年+实战经验</div>
        </div>
      </div>
    </Fragment>
  </Content>

  <!-- Steps2 核心价值观 ****************** -->
  <Steps2
    title="我们的价值观"
    subtitle="专业、诚信、创新、共赢 —— 是我们始终坚守的核心价值观"
    items={[
      {
        title: '专业至上',
        description: '我们始终保持学习的态度，不断提升专业能力，为客户提供最专业、最前沿的服务。深入研究平台规则和算法，确保每一个策略都基于专业判断。',
        icon: 'tabler:certificate',
      },
      {
        title: '诚信为本',
        description: '诚信是我们的立身之本。我们用真实的案例、透明的流程、诚恳的态度，赢得客户的信任。承诺的必定做到，做不到的绝不承诺。',
        icon: 'tabler:shield-check',
      },
      {
        title: '持续创新',
        description: '跨境领域日新月异，我们紧跟行业发展趋势，不断创新服务模式和教学方法，为客户提供最具竞争力的解决方案。',
        icon: 'tabler:bulb',
      },
      {
        title: '合作共赢',
        description: '我们相信，只有与客户共同成长，才能走得更远。我们不只是服务提供者，更是您出海路上的战略合作伙伴。',
        icon: 'tabler:users-group',
      },
    ]}
  />

  <!-- Features2 联系我们 ************** -->
  <Features2
    title="联系我们"
    tagline="总部位置"
    columns={2}
    items={[
      {
        title: '深圳总部',
        description: '深圳市宝安区沙井<br />专业的跨境培训与咨询服务',
        icon: 'tabler:map-pin',
      },
      {
        title: '免费咨询',
        description: '提供免费的出海咨询服务<br />为您量身定制出海方案',
        icon: 'tabler:phone-call',
      },
    ]}
  />
</Layout>
