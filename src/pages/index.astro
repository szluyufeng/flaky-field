---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import mentorImage from '~/assets/images/mentor.png';

const tiktokIcon = `<svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full p-2 text-black dark:text-white"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.65-1.62-1.12-8.84 8.79-24.89-4.81-12.45-12.57 3.32-2.08 7.63-1.89 10.57.8.29.27.57.56.81.87v-7Zm-4.25 5.51c-2.48.06-4.66 1.83-5.02 4.28-.48 3.23 2.15 6.13 5.37 5.92 2.14-.14 4.02-1.93 4.11-4.08.09-2.22-1.5-4.17-3.66-4.47-.27-.03-.54-.05-.8-.05Z"/></svg>`;

const youtubeIcon = `<svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full p-2 text-red-600"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>`;

const googleIcon = `<svg viewBox="0 0 48 48" class="w-full h-full p-1"><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/><path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/></svg>`;

const amazonIcon = `<svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full p-2 text-black dark:text-white"><path d="M13.638 10.966c.277 1.636-1.1 2.383-1.996 2.383-1.393 0-1.896-.759-1.896-1.956 0-1.874 1.415-2.274 3.892-2.234v1.807zm-2.81 5.923c2.472 0 3.59-1.295 3.832-2.193l.1.14c.26.358 1.056 1.933 3.53 1.933 1.575 0 2.653-.698 2.653-1.834 0-1.037-.818-1.576-1.975-1.576-1.156 0-1.755.459-1.935.838l-.16-.24c.3-1.854.26-4.507-.06-5.225-.638-1.435-2.453-1.894-4.21-1.894-3.13 0-5.185 1.496-5.185 3.85 0 1.256.918 2.014 2.135 2.014.938 0 1.616-.539 1.616-1.536 0-1.077-.858-1.536-1.716-1.536-.3 0-.6.04-.838.12.359-1.336 1.775-1.635 3.012-1.635 1.556 0 2.135.599 2.135 1.955v.698c-3.792.08-6.107.977-6.107 4.13 0 1.995 1.337 3.036 3.174 3.036zm3.53 1.676c-3.114 2.155-7.744 1.996-10.438.3-.34-.22-.38-.658-.08-.957.28-.28.718-.28 1.037-.04 2.394 1.456 6.367 1.516 9.04.14.399-.199.918-.08 1.137.3.22.4.1.918-.3.918-.198-.598-.4-.757-.399-.658z"/></svg>`;

const metadata = {
  title: '巨星出海 - 国内领先的跨境培训与品牌孵化机构',
  description: 'TikTok官方认证全资质机构，已服务1000+客户，打造多个千万粉丝账号矩阵。助力中国品牌出海，创造更多社会就业机会。',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero 首屏区块 ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: '免费咨询',
        href: '/contact',
        icon: 'tabler:message-circle',
      },
      { text: '了解更多', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-blue-400">助力中国品牌出海</span><br />
      <span class="text-5xl md:text-6xl font-bold">巨星出海</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-lg md:text-xl text-slate-600 dark:text-slate-300 tracking-wide leading-relaxed">
        国内领先的<span class="font-bold text-blue-600 dark:text-blue-400">跨境培训、跨境咨询和品牌孵化</span>专业机构<br />
        <span class="mt-4 inline-block p-3 bg-white/10 backdrop-blur border border-white/10 rounded-lg">
           <span class="font-semibold text-gray-800 dark:text-white">TikTok官方认证全资质机构</span>
           <span class="text-sm opacity-80 block mt-1">TSP · TAP · MCN · ADS</span>
        </span>
      </span>
    </Fragment>
    
    <Fragment slot="image">
      <div class="relative w-full h-auto md:h-[500px] rounded-xl shadow-2xl overflow-hidden bg-gradient-to-br from-[#0f172a] via-[#1e1b4b] to-[#312e81] text-white border border-white/10 group">
        <!-- 背景装饰 -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl -mr-32 -mt-32 pointer-events-none group-hover:bg-blue-500/30 transition-colors duration-500"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl -ml-32 -mb-32 pointer-events-none group-hover:bg-purple-500/30 transition-colors duration-500"></div>

        <!-- 内容容器 -->
        <div class="relative h-full p-6 md:p-8 flex flex-col justify-between z-10">
          
          <!-- 顶部：Logo与荣誉 -->
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8 md:mb-0">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 md:w-12 md:h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg shrink-0">
                <span class="text-xl md:text-2xl">🌟</span>
              </div>
              <div>
                <h3 class="text-xl md:text-2xl font-bold tracking-wider">巨星出海</h3>
                <p class="text-xs md:text-sm text-blue-200 font-medium">Ju Xing Chu Hai</p>
              </div>
            </div>
            <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-full border border-white/20 self-start md:self-auto">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
              </span>
              <span class="text-xs font-medium tracking-wide">TikTok 官方认证机构</span>
            </div>
          </div>

          <!-- 中部：核心价值与Slogan -->
          <div class="flex-1 flex flex-col justify-center py-6 md:py-0">
            <div class="space-y-6 md:space-y-8">
              <div class="space-y-3 text-center">
                <div class="inline-block px-2 py-1 rounded bg-blue-500/20 text-blue-300 text-xs font-semibold tracking-wider mb-2">跨境出海实战派</div>
                <h2 class="text-3xl md:text-5xl font-bold leading-tight">
                  <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-blue-100 to-blue-300">成就下一个</span>
                  <br/>
                  <span class="text-yellow-400">出海巨星</span>
                </h2>
                <p class="text-gray-300 text-sm md:text-lg">
                  13年跨境百强企业 · 3年短视频探索 · 1283个实战账号
                </p>
              </div>
              
              <div class="grid grid-cols-2 gap-3 md:gap-4">
                <div class="bg-white/5 backdrop-blur-sm p-3 md:p-4 rounded-xl border border-white/10 hover:bg-white/10 transition-colors">
                  <div class="text-blue-300 text-xs font-medium mb-1">全资质认证</div>
                  <div class="font-bold text-sm md:text-base tracking-tight">TSP / TAP / MCN / ADS</div>
                </div>
                <div class="bg-white/5 backdrop-blur-sm p-3 md:p-4 rounded-xl border border-white/10 hover:bg-white/10 transition-colors">
                  <div class="text-purple-300 text-xs font-medium mb-1">服务成果</div>
                  <div class="font-bold text-sm md:text-base tracking-tight">1000+ 客户品牌孵化</div>
                </div>
              </div>
            </div>
          </div>

          <!-- 底部：奖项徽章 -->
          <div class="grid grid-cols-3 gap-2 md:gap-4 mt-4 md:mt-0 pt-4 border-t border-white/5 md:border-none">
            <div class="flex flex-col items-center text-center p-2 rounded-lg bg-gradient-to-b from-white/5 to-transparent">
              <div class="text-lg md:text-xl mb-1">🏆</div>
              <div class="text-[10px] md:text-xs text-gray-400 font-medium uppercase tracking-wider">TikTok Shop</div>
              <div class="text-xs md:text-sm font-bold text-white mt-0.5">双周TOP1</div>
            </div>
            <div class="flex flex-col items-center text-center p-2 rounded-lg bg-gradient-to-b from-white/5 to-transparent">
              <div class="text-lg md:text-xl mb-1">⭐</div>
              <div class="text-[10px] md:text-xs text-gray-400 font-medium uppercase tracking-wider">官方认证</div>
              <div class="text-xs md:text-sm font-bold text-white mt-0.5">超级星探</div>
            </div>
            <div class="flex flex-col items-center text-center p-2 rounded-lg bg-gradient-to-b from-white/5 to-transparent">
              <div class="text-lg md:text-xl mb-1">👑</div>
              <div class="text-[10px] md:text-xs text-gray-400 font-medium uppercase tracking-wider">跨境达人</div>
              <div class="text-xs md:text-sm font-bold text-white mt-0.5">综合TOP1</div>
            </div>
          </div>
        </div>
      </div>
    </Fragment>
  </Hero>

  <!-- Stats 数据展示 ****************** -->
  <Stats
    title="用数据说话"
    subtitle="真实的成绩，见证我们的专业实力"
    stats={[
      { title: '服务客户', amount: '1000+', icon: 'tabler:users' },
      { title: '千万粉丝账号', amount: '多个', icon: 'tabler:star' },
      { title: '跨境经验', amount: '15年+', icon: 'tabler:trophy' },
      { title: '专业导师', amount: '数十位', icon: 'tabler:user-check' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50/50 dark:bg-slate-900/50 border-y border-blue-100 dark:border-slate-800"></div>
    </Fragment>
  </Stats>

  <!-- Features 四大核心系统 *************** -->
  <Features2
    id="training"
    tagline="核心服务"
    title="TikTok海外短视频四大系统"
    subtitle="从定位到变现，全链路系统化培训，助力企业快速掌握TikTok出海运营"
    columns={2}
    items={[
      {
        title: '定位系统',
        description: '科学上网、市场定位、账号定位、内容定位，为您的出海之路打下坚实基础。',
        icon: 'tabler:target',
      },
      {
        title: '引流系统',
        description: '网络呈现、拍摄剪辑、选题文案、运营推广、数据分析，全方位提升流量获取能力。',
        icon: 'tabler:rocket',
      },
      {
        title: '裂变系统',
        description: '矩阵搭建、社媒搭建、小店运营、外联搭建、广告策略，实现指数级增长。',
        icon: 'tabler:chart-arrows',
      },
      {
        title: '变现系统',
        description: '外贸流程、客户调研、转化提升、外联优化、店铺运营、物流回款，打通商业闭环。',
        icon: 'tabler:cash',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Content 公司介绍 **************** -->
  <Content
    isReversed
    tagline="关于巨星出海"
    title="专业的跨境服务机构"
    items={[
      {
        title: 'TikTok官方认证全资质',
        description: '拥有TSP、TAP、MCN、ADS全资质认证，官方授权合作机构。',
      },
      {
        title: '丰富的实战经验',
        description: '15年跨境电商经验，从零到一运营TikTok的项目经验。',
      },
      {
        title: '卓越的服务成果',
        description: '已服务1000+客户，打造多个千万粉丝账号矩阵。',
      },
    ]}
  >
    <Fragment slot="content">
      <div class="mb-8">
        <div class="flex items-center gap-2 mb-4">
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-300 text-xs font-bold uppercase rounded-full tracking-wider">About Us</span>
          <span class="h-px flex-1 bg-gray-200 dark:bg-gray-700"></span>
        </div>
        
        <h3 class="text-3xl md:text-4xl font-bold tracking-tight dark:text-white mb-6 leading-tight">
          国内领先的跨境培训<br/>与<span class="text-blue-600">品牌孵化</span>机构
      </h3>
        
        <div class="prose dark:prose-invert max-w-none">
          <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed mb-6">
            巨星出海总部位于深圳沙井，汇聚行业顶尖资源。作为<span class="font-semibold text-gray-900 dark:text-white">TikTok官方认证全资质机构</span>，我们不仅拥有数十位实战运营导师，更在2022年荣膺<span class="font-semibold text-blue-600">"年度十大机构品牌"</span>殊荣，多次获得跨境电商领域重量级奖项。
          </p>
          
          <div class="bg-blue-50/50 dark:bg-slate-800/50 border-l-4 border-blue-600 p-4 rounded-r-lg mb-6 hover:bg-blue-50 dark:hover:bg-slate-800 transition-colors">
            <h4 class="text-base font-bold text-gray-900 dark:text-white mb-1 flex items-center gap-2">
              <span class="text-xl">🚀</span> 我们的使命
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400 m-0">
              助力中国品牌出海，创造更多社会就业机会，与合作伙伴共同成长，构建全球互通的服务生态。
            </p>
          </div>
        </div>
      </div>
    </Fragment>

    <Fragment slot="image">
      <div class="relative group mx-auto max-w-sm md:max-w-none pb-8 md:pb-0">
        <!-- Glow Effect behind -->
        <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
        
        <!-- Main Card Body -->
        <div class="relative w-full bg-white dark:bg-slate-900 rounded-2xl shadow-xl overflow-hidden border border-gray-100 dark:border-slate-800 transform hover:-translate-y-1 transition-transform duration-300">
          
          <!-- Header / Visual Area -->
          <div class="h-48 bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700 relative flex items-center justify-center overflow-hidden">
            <!-- Animated Circles Background -->
            <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-30">
              <div class="absolute w-64 h-64 bg-white/20 rounded-full mix-blend-overlay filter blur-3xl -top-10 -left-10"></div>
              <div class="absolute w-64 h-64 bg-pink-500/20 rounded-full mix-blend-overlay filter blur-3xl bottom-0 right-0"></div>
            </div>
            
            <!-- Central Icon -->
            <div class="relative z-10 text-center transform group-hover:scale-105 transition-transform duration-500">
              <div class="w-20 h-20 mx-auto bg-white/10 backdrop-blur-md rounded-2xl flex items-center justify-center shadow-[0_8px_30px_rgb(0,0,0,0.12)] border border-white/20 mb-3 ring-1 ring-white/30">
                <span class="text-5xl filter drop-shadow-lg">🏆</span>
              </div>
              <div class="text-white font-bold tracking-[0.2em] text-xs uppercase opacity-90">Top Agency</div>
            </div>
          </div>
          
          <!-- Content Body -->
          <div class="p-6 md:p-8">
            <div class="text-center mb-6">
              <h4 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">TikTok 2022年度</h4>
              <p class="text-xl text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 font-bold">十大机构品牌</p>
            </div>
            
            <!-- Stats Grid -->
            <div class="grid grid-cols-3 gap-2 md:gap-4 mb-6">
              <div class="text-center p-2 rounded-lg bg-gray-50 dark:bg-slate-800/50 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors group/stat">
                <div class="text-lg font-bold text-gray-900 dark:text-white group-hover/stat:text-blue-600 transition-colors">1000+</div>
                <div class="text-[10px] text-gray-500 dark:text-gray-400 uppercase">服务客户</div>
              </div>
              <div class="text-center p-2 rounded-lg bg-gray-50 dark:bg-slate-800/50 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors group/stat">
                <div class="text-lg font-bold text-gray-900 dark:text-white group-hover/stat:text-blue-600 transition-colors">50+</div>
                <div class="text-[10px] text-gray-500 dark:text-gray-400 uppercase">实战导师</div>
              </div>
              <div class="text-center p-2 rounded-lg bg-gray-50 dark:bg-slate-800/50 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors group/stat">
                <div class="text-lg font-bold text-gray-900 dark:text-white group-hover/stat:text-blue-600 transition-colors">100%</div>
                <div class="text-[10px] text-gray-500 dark:text-gray-400 uppercase">全资质</div>
              </div>
            </div>

            <!-- Tags -->
            <div class="flex flex-wrap justify-center gap-2">
              <span class="px-2.5 py-1 text-xs font-semibold bg-blue-100/50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-md border border-blue-200 dark:border-blue-800">TSP</span>
              <span class="px-2.5 py-1 text-xs font-semibold bg-purple-100/50 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-md border border-purple-200 dark:border-purple-800">MCN</span>
              <span class="px-2.5 py-1 text-xs font-semibold bg-indigo-100/50 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 rounded-md border border-indigo-200 dark:border-indigo-800">TAP</span>
              <span class="px-2.5 py-1 text-xs font-semibold bg-teal-100/50 dark:bg-teal-900/30 text-teal-700 dark:text-teal-300 rounded-md border border-teal-200 dark:border-teal-800">ADS</span>
            </div>
          </div>
        </div>
        
        <!-- Floating Badge -->
        <div class="absolute -right-6 top-32 bg-white dark:bg-slate-800 p-3 rounded-xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] border border-gray-100 dark:border-slate-700 hidden lg:block transform rotate-12 group-hover:rotate-6 transition-all duration-300 z-20">
           <div class="flex items-center gap-2">
             <span class="text-2xl">⭐</span>
             <div class="text-left">
               <div class="text-[10px] font-bold uppercase text-gray-400">Official</div>
               <div class="text-xs font-bold whitespace-nowrap">认证机构</div>
             </div>
           </div>
        </div>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps 发展历程 ****************** -->
  <Steps
    title="发展历程"
    subtitle="十余年深耕跨境领域，不断创新与突破"
    items={[
      {
        title: '2011年',
        description: '成立深圳市玩咖科技有限公司，开启跨境电商探索之旅。',
        icon: 'tabler:flag',
      },
      {
        title: '2015年',
        description: '成立跨境电商事业部，开拓全球市场，积累丰富的国际化运营经验。',
        icon: 'tabler:world',
      },
      {
        title: '2021年',
        description: '成立巨星出海，专注企业培训和咨询，助力更多企业出海。',
        icon: 'tabler:rocket',
      },
      {
        title: '2023年',
        description: '聚星集团官网正式上线，开启集团业务发展新篇章，服务体系全面升级。',
        icon: 'tabler:star',
      },
