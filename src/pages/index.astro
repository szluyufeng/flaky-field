---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import mentorImage from '~/assets/images/mentor.png';

const metadata = {
  title: '巨星出海 - 国内领先的跨境培训与品牌孵化机构',
  description: 'TikTok官方认证全资质机构，已服务1000+客户，打造多个千万粉丝账号矩阵。助力中国品牌出海，创造更多社会就业机会。',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero 首屏区块 ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: '免费咨询',
        href: '/contact',
        icon: 'tabler:message-circle',
      },
      { text: '了解更多', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-blue-400">助力中国品牌出海</span><br />
      <span class="text-5xl md:text-6xl font-bold">巨星出海</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-lg md:text-xl">
        国内领先的<span class="font-bold text-blue-600">跨境培训、跨境咨询和品牌孵化</span>专业机构<br />
        <span class="mt-2 block">TikTok官方认证全资质机构（TSP、TAP、MCN、ADS）</span><br />
        <span class="mt-2 block text-base">已服务 <span class="font-bold text-blue-600">1000+</span> 客户 · 打造多个<span class="font-bold text-blue-600">千万粉丝</span>账号矩阵</span>
      </span>
    </Fragment>
    
    <Fragment slot="image">
      <div class="relative w-full h-auto md:h-[500px] rounded-xl shadow-2xl overflow-hidden bg-gradient-to-br from-[#0f172a] via-[#1e1b4b] to-[#312e81] text-white border border-white/10 group">
        <!-- 背景装饰 -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl -mr-32 -mt-32 pointer-events-none group-hover:bg-blue-500/30 transition-colors duration-500"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl -ml-32 -mb-32 pointer-events-none group-hover:bg-purple-500/30 transition-colors duration-500"></div>

        <!-- 内容容器 -->
        <div class="relative h-full p-6 md:p-8 flex flex-col justify-between z-10">
          
          <!-- 顶部：Logo与荣誉 -->
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8 md:mb-0">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 md:w-12 md:h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg shrink-0">
                <span class="text-xl md:text-2xl">🌟</span>
              </div>
              <div>
                <h3 class="text-xl md:text-2xl font-bold tracking-wider">巨星出海</h3>
                <p class="text-xs md:text-sm text-blue-200 font-medium">Ju Xing Chu Hai</p>
              </div>
            </div>
            <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-full border border-white/20 self-start md:self-auto">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
              </span>
              <span class="text-xs font-medium tracking-wide">TikTok 官方认证机构</span>
            </div>
          </div>

          <!-- 中部：核心价值与Slogan -->
          <div class="flex-1 flex flex-col justify-center py-6 md:py-0">
            <div class="space-y-6 md:space-y-8">
              <div class="space-y-3 text-center">
                <div class="inline-block px-2 py-1 rounded bg-blue-500/20 text-blue-300 text-xs font-semibold tracking-wider mb-2">跨境出海实战派</div>
                <h2 class="text-3xl md:text-5xl font-bold leading-tight">
                  <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-blue-100 to-blue-300">成就下一个</span>
                  <br/>
                  <span class="text-yellow-400">出海巨星</span>
                </h2>
                <p class="text-gray-300 text-sm md:text-lg">
                  13年跨境百强企业 · 3年短视频探索 · 1283个实战账号
                </p>
              </div>
              
              <div class="grid grid-cols-2 gap-3 md:gap-4">
                <div class="bg-white/5 backdrop-blur-sm p-3 md:p-4 rounded-xl border border-white/10 hover:bg-white/10 transition-colors">
                  <div class="text-blue-300 text-xs font-medium mb-1">全资质认证</div>
                  <div class="font-bold text-sm md:text-base tracking-tight">TSP / TAP / MCN / ADS</div>
                </div>
                <div class="bg-white/5 backdrop-blur-sm p-3 md:p-4 rounded-xl border border-white/10 hover:bg-white/10 transition-colors">
                  <div class="text-purple-300 text-xs font-medium mb-1">服务成果</div>
                  <div class="font-bold text-sm md:text-base tracking-tight">1000+ 客户品牌孵化</div>
                </div>
              </div>
            </div>
          </div>

          <!-- 底部：奖项徽章 -->
          <div class="grid grid-cols-3 gap-2 md:gap-4 mt-4 md:mt-0 pt-4 border-t border-white/5 md:border-none">
            <div class="flex flex-col items-center text-center p-2 rounded-lg bg-gradient-to-b from-white/5 to-transparent">
              <div class="text-lg md:text-xl mb-1">🏆</div>
              <div class="text-[10px] md:text-xs text-gray-400 font-medium uppercase tracking-wider">TikTok Shop</div>
              <div class="text-xs md:text-sm font-bold text-white mt-0.5">双周TOP1</div>
            </div>
            <div class="flex flex-col items-center text-center p-2 rounded-lg bg-gradient-to-b from-white/5 to-transparent">
              <div class="text-lg md:text-xl mb-1">⭐</div>
              <div class="text-[10px] md:text-xs text-gray-400 font-medium uppercase tracking-wider">官方认证</div>
              <div class="text-xs md:text-sm font-bold text-white mt-0.5">超级星探</div>
            </div>
            <div class="flex flex-col items-center text-center p-2 rounded-lg bg-gradient-to-b from-white/5 to-transparent">
              <div class="text-lg md:text-xl mb-1">👑</div>
              <div class="text-[10px] md:text-xs text-gray-400 font-medium uppercase tracking-wider">跨境达人</div>
              <div class="text-xs md:text-sm font-bold text-white mt-0.5">综合TOP1</div>
            </div>
          </div>
        </div>
      </div>
